generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id           String       @id @default(cuid())
  createdOn    DateTime
  payer        String
  status       String
  email        String    @unique
  payerPhone   String
  services     String
  scheduled    DateTime
}

model Service {
  id     String    @id @default(cuid())
  name   String
  type   String
  status String
}